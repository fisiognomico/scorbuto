{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "outDir": "./dist/types",
    "rootDir": "./src",
    "noEmitOnError": true,
    "strict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true, // Generate .d.ts files
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "bundler"
  }
}
